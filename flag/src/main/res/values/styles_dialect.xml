<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        It's a file for shortening XML layout files
        There're various combinations of most often used patterns in layouts
    -->

    <style name="Fit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Space">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="StretchWrap">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="StretchFit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FitStretch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="StretchFit.X1"><item name="android:layout_weight"> 1 </item> </style>
    <style name="StretchFit.X2"><item name="android:layout_weight"> 2 </item> </style>
    <style name="StretchWrap.X1"><item name="android:layout_weight"> 1 </item> </style>
    <style name="StretchWrap.X2"><item name="android:layout_weight"> 2 </item> </style>

    <style name="FitStretch.X1"><item name="android:layout_weight"> 1 </item> </style>
    <style name="FitStretch.X2"><item name="android:layout_weight"> 2 </item> </style>

    <style name="FitWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

